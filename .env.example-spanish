# === SERVIDOR ===
# OPCIONAL - Por defecto: 3000
SERVER_PORT=3000

# === BASE DE DATOS (TODAS OBLIGATORIAS) ===
DB_HOST=localhost                                    # 游댮 OBLIGATORIO - Host de la base de datos
DB_PORT=5432                                         # 游댮 OBLIGATORIO - Puerto de la base de datos
DB_USERNAME=postgres                                 # 游댮 OBLIGATORIO - Usuario de la base de datos
DB_PASSWORD=your_database_password                   # 游댮 OBLIGATORIO - Contrase침a de la base de datos
DB_DATABASE=nestjs_enhanced                          # 游댮 OBLIGATORIO - Nombre de la base de datos

# OPCIONAL - Deshabilitar verificaci칩n SSL (por defecto: false)
DATABASE_SSL_DISABLE_REJECT_UNAUTHORIZED=false

# === CONFIGURACI칍N JWT (TODAS OBLIGATORIAS) ===
JWT_PRIVATE_KEY_PATH=./.certs/jwt-private.pem        # 游댮 OBLIGATORIO - Ruta al archivo de clave privada JWT
JWT_PUBLIC_KEY_PATH=./.certs/jwt-public.pem          # 游댮 OBLIGATORIO - Ruta al archivo de clave p칰blica JWT

# OPCIONAL - Tiempo de expiraci칩n del token (15m, 1h, 30s, 7d)
JWT_EXPIRATION=15m

# OPCIONAL - Expiraci칩n del token de refresh (7d, 30d, 1y)
JWT_REFRESH_EXPIRATION=7d

# OPCIONAL - Emisor del token (identificador de tu API/empresa)
# Ejemplos: mi-empresa-api, auth.midominio.com, zeus-backend
JWT_ISSUER=nestjs-api

# OPCIONAL - Audiencia del token (aplicaci칩n objetivo)
# Ejemplos: mobile-app, web-dashboard, admin-panel, public-api
JWT_AUDIENCE=nestjs-client

